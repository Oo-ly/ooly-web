{
  "extends": "tslint-config-airbnb",
  "rules": {
    "no-boolean-literal-compare": true,
    "max-line-length": [true, 140],
    "import-name": false,
    "variable-name": false,
    "arrow-parens": "always"
  },
  "defaultSeverity": "error",
  "project": "tsconfig.json",
  "indent": [true, "spaces", 2]
}
